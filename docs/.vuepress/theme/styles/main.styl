@import "./colors.styl"

#app, .full-height
  height 100%

::-webkit-scrollbar
  width 4px

::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)

::-webkit-scrollbar-thumb
  -webkit-border-radius 10px
  border-radius 10px
  background rgba(255, 255, 255, 0.4)
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)

::-webkit-scrollbar-thumb:window-inactive
	background rgba(255, 255, 255, 0.8)

.guide
  margin-bottom 1em
  &.cols2, &.cols3
    display flex
    justify-content center
    align-items center
    &.top-align
      align-items flex-start
    flex-wrap wrap
    img
      border-radius 8px
    .col
      margin 0 1em
    .col.grow
      flex 1
    .col.figcap
      display flex
      flex-direction column
      text-align center
      > p:first-child
        margin-bottom 0.2em
  &.cols2 .col.grow
    flex-basis 370px
  &.cols3 .col.grow
    flex-basis 250px

.center
  display flex
  justify-content center
  align-items center

@media screen and (max-width 425px)
  .md-table
    width 100%
    overflow-x auto
    table.ui.table
      width 200%
      td
        max-width 80vw
