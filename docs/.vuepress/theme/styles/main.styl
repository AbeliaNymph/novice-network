@import "./colors.styl"
@import "./font.styl"
@import "./map.styl"
@import "./dark.styl"

body, h1, h2, h3, h4, h5, #app .ui.menu
  font-family: 'FFXIV', Lato, Helvetica Neue, "Microsoft Yahei", "微软雅黑", Arial, Helvetica, sans-serif;
  color #333

h1, h2, h3, h4, h5
  transition background 0.5s

::-webkit-scrollbar-track
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.3)

::-webkit-scrollbar-thumb
  -webkit-border-radius 10px
  border-radius 10px
  background rgba(255, 255, 255, 0.4)
  -webkit-box-shadow inset 0 0 6px rgba(0,0,0,0.5)

::-webkit-scrollbar-thumb:window-inactive
	background rgba(255, 255, 255, 0.8)

.guide
  margin-bottom 1em
  &.cols2, &.cols3, &.cols4
    display flex
    justify-content center
    align-items center
    &.base /* 分栏下对齐 */
      align-items baseline
    &.top-align /* 分栏上对齐 */
      align-items flex-start
    flex-wrap wrap
    img
      border-radius 8px
      &.no-zoom
        border-radius 0
    .col
      margin 0 1em
    &.comp
      .col
        margin 0 0.5em
      td
        padding 0.2em 0.5em
        white-space nowrap
    .col.grow
      flex 1
    .col.figcap
      display flex
      flex-direction column
      text-align center
      img 
        margin 0 auto
      > p:first-child
        margin-bottom 0.2em
  &.cols2 .col.grow
    flex-basis 370px
  &.cols3 .col.grow
    flex-basis 250px
  .sticky /* 自适应分栏置顶 */
    position sticky
    top 0
    padding 2em 0 0
    margin-bottom 0
    z-index 1
    background repeating-linear-gradient(0deg, #f8f8f8, #f8f8f8 1px, #fff 1px, #fff 2px)
.dark /* 暗色模式 */
  .sticky
    background #1b1c1d
.center
  display flex
  justify-content center
  align-items center
iframe
  width 400px
  height 30vh
  border-style none

@media screen and (min-width 768px) /* 电脑 */
  .guide
    &.cols2, &.cols3, &.cols4
      .col:first-child
        margin-left 0 !important
      .col:last-child
        margin-right 0 !important 

@media screen and (max-width 768px) /* 手机 */
  .guide
    &.cols2, &.cols3, &.cols4
      .col
        margin 0 0.2em
  .md-table::before
    content '※ 左右滑动以浏览完整表格'
    position sticky
    left 0
    font-size 0.9em
    color #888
  .md-table
    font-size 0.9em
    width 100%
    overflow-x auto
    position relative
    table.ui.table
      width 100% /* 不锁了，手机需要超宽的直接HTML写宽度 */
      td
        max-width 75vw
  iframe
    width 85vw
    height 85vw
/* 首页特供 */
.content-container:has(.home-container) aside
  display none !important
.content-outer:has(.home-container)
  background-image url(/images/bg/bgnew.jpg)
  background-attachment fixed
  background-size cover
  margin-left 30px
.dark .content-outer:has(.home-container)
  background-image linear-gradient(0deg, #000000e0, #000000e0), url(/images/bg/bgnew.jpg)